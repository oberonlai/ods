{
  "scripts": {
    "build": "parcel build --no-content-hash src/js/script.js src/sass/style.scss src/img/** --no-source-maps -d assets",
    "start": "parcel serve src/*.pug --no-source-maps -d dev"
  },
  "devDependencies": {
    "cssnano": "^4.1.10",
    "parcel": "^1.12.4",
    "parcel-plugin-custom-dist-structure": "^1.1.3",
    "pug": "^2.0.4",
    "sass": "^1.26.3"
  },
  "dependencies": {
    "uikit": "^3.4.0"
  },
  "customDistStructure": {
    "config": {
      ".js": "js",
      ".css": "css",
      "img": [
        ".jpg",
        ".png",
        ".svg"
      ]
    },
    "options": {
      "development": true
    }
  }
}
